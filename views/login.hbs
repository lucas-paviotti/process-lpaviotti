<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <form class="formproducto wrapper" id="formLogin" method="post" onsubmit="sendFormLogin(); return false;">
                <div class="formproducto__row">
                    <div class="formproducto__field">
                        <label for="usuario-username">Nombre de usuario</label>
                    </div>
                    <div class="formproducto__field">
                        <input id="usuario-username" type="text" name="usuario-username" placeholder="Ingrese su nombre de usuario.." required>
                    </div>
                </div>
                <div class="formproducto__row">
                    <div class="formproducto__field">
                        <label for="usuario-password">Password</label>
                    </div>
                    <div class="formproducto__field">
                        <input id="usuario-password" type="password" name="usuario-password" placeholder="Ingrese su password.." autocomplete="off" required>
                    </div>
                </div>
                <div class="formproducto__row">
                    <div class="formproducto__field">
                        <input type="submit" value="Enviar">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>